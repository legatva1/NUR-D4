<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.cvut.nur.mojeid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cz.cvut.nur.mojeid.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.cvut.nur.mojeid.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cz.cvut.nur.mojeid.InformationTransferActivity"
            android:label="@string/title_transfer_information" >
        </activity>
        <activity
            android:name="cz.cvut.nur.mojeid.ForgottenPasswordActivity"
            android:label="@string/title_activity_forgotten_password"
            android:parentActivityName="cz.cvut.nur.mojeid.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.cvut.nur.mojeid.LoginActivity" />
        </activity>
    </application>

</manifest>
